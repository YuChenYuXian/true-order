/* pages/store/store.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.flex {
  display: flex;
  align-items: center;
}

.clearfix:before, .clearfix:after {
  display: table;
  content: " ";
}

.container {
  padding: 5px 5px;
  background: #f2f2f2;
}

.search {
  font-size: 12px;
  color: #c2c2c2;
  text-align: left;
  background: #e4e4e4;
  padding: 8px 10px;
}

.search image {
  width: 20px;
  height: 20px;
  vertical-align: -5px;
}

.tab {
  background: #f2f2f2;
  margin-top: 10px;
  display: flex;
}

.tab image {
  width: 20px;
  height: 20px;
  vertical-align: -5px;
}

.tab .item {
  width: 49%;
  font-size: 13px;
  color: #808080;
  text-align: center;
  background: #f9f9f9;
  padding: 10px 0;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}

.tab .item.focus {
  font-size: 13px;
  color: #f90;
  text-align: center;
  background: #fff;
  padding: 10px 0;
}

.item.ml {
  margin-left: 2%;
}
